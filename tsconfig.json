{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["dom", "es2017", "es2018"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "types": [
      "@types/webpack-env"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules"]
}
